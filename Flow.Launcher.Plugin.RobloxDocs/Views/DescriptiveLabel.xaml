<UserControl x:Name="self" x:Class="Flow.Launcher.Plugin.RobloxDocs.Views.DescriptiveLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Flow.Launcher.Plugin.RobloxDocs.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel
        VerticalAlignment="Center"
        HorizontalAlignment="Left">
            
        <TextBlock Text="{Binding Title, ElementName=self}"
                   FontWeight="Bold"
                   Margin="0, 0,0, 2"/>
        <TextBlock Text="{Binding Subtitle, ElementName=self}"/>
    </StackPanel>
</UserControl>
